<div id="sidebar" class="yui3-u-1-4">
    <div class="liner">
        <!-- Stats Link -->
        <div class="sidebox widget">
            <div class="bd">
                <a href="{{ site.baseUrl }}stats/" style="display:block;background:#30418C;color:#fff;padding:12px 15px;border-radius:6px;text-align:center;text-decoration:none;font-weight:bold;">ðŸ“Š Over the Years</a>
            </div>
        </div>

        <!-- Archives -->
        <div id="archives" class="sidebox widget">
            <div class="hd"><h2>Archives</h2></div>
            <div class="bd">
                <select onchange="if (this.value) window.location.href=this.value">
                    <option value="">Select Month</option>
                    {% for year in range(2014, 2005, -1) %}
                        {% for month in range(12, 0, -1) %}
                            {% set monthStr = month | string %}
                            {% if month < 10 %}{% set monthStr = "0" + monthStr %}{% endif %}
                            <option value="{{ site.baseUrl }}{{ year }}/{{ monthStr }}/">
                                {% set monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"] %}
                                {{ monthNames[month - 1] }} {{ year }}
                            </option>
                        {% endfor %}
                    {% endfor %}
                </select>
            </div>
        </div>

        <!-- Categories -->
        <div id="categories" class="sidebox widget widget_categories">
            <div class="hd"><h2>Categories</h2></div>
            <div class="bd">
                <ul>
                    {% for cat in site.categories %}
                    <li>
                        <a href="{{ site.baseUrl }}category/{{ cat.slug }}/">{{ cat.name }}</a>
                        {% if collections.categories[cat.name] %}
                            ({{ collections.categories[cat.name].length }})
                        {% endif %}
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <!-- Authors -->
        <div id="authors" class="sidebox widget widget_authors">
            <div class="hd"><h2>Authors</h2></div>
            <div class="bd">
                <ul>
                    {% for author in authors %}
                    {% if author.postCount >= 5 and author.name != "Unknown" and author.name != "Administrator" %}
                    <li>
                        <a href="{{ site.baseUrl }}author/{{ author.name | slugify }}/">{{ author.name }}</a>
                        ({{ author.postCount }})
                    </li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
