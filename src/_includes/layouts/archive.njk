---
layout: layouts/base.njk
---

{% block bodyClass %} archive{% endblock %}

{% block breadcrumbs %}
<ul class="breadcrumbs">
    <li><a href="{{ site.baseUrl }}">YUI</a></li>
    <li><a href="{{ site.baseUrl }}blog/">Blog</a></li>
    {% if archiveType == "category" %}
    <li>{{ archiveTitle }}</li>
    {% elif archiveType == "author" %}
    <li>Author: {{ archiveTitle }}</li>
    {% elif archiveType == "date" %}
    <li>{{ archiveTitle }}</li>
    {% endif %}
</ul>
{% endblock %}

{% block content %}
<div class="archive-header">
    <h1>{{ archiveTitle }}</h1>
    {% if archiveDescription %}
    <p>{{ archiveDescription }}</p>
    {% endif %}
</div>

<div class="post-list">
    {% for post in pagination.items %}
    <article class="post-summary">
        <header>
            <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
            <div class="meta">
                <span class="author">By {{ post.data.author }}</span>
                <span class="date">{{ post.date | dateDisplay }}</span>
            </div>
        </header>
        {% if post.data.excerpt %}
        <div class="excerpt">
            {{ post.data.excerpt | safe }}
        </div>
        {% endif %}
        <a href="{{ post.url }}" class="read-more">Read more &rarr;</a>
    </article>
    {% endfor %}
</div>

<!-- Pagination -->
{% if pagination.pages.length > 1 %}
<nav class="pagination">
    {% if pagination.href.previous %}
    <a href="{{ pagination.href.previous }}" class="prev">&larr; Newer Posts</a>
    {% endif %}
    
    <span class="page-info">Page {{ pagination.pageNumber + 1 }} of {{ pagination.pages.length }}</span>
    
    {% if pagination.href.next %}
    <a href="{{ pagination.href.next }}" class="next">Older Posts &rarr;</a>
    {% endif %}
</nav>
{% endif %}
{% endblock %}
